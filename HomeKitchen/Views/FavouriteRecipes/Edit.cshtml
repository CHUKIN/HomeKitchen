@model HomeKitchen.Models.FavouriteRecipe

@{
    ViewBag.Title = "Редактировать избранное";
}

<h2>Редактировать избранное</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Избранное</h4>
        <hr class="black-border"/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserId)

        @Html.HiddenFor(model => model.ReceipeId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Save" class="btn btn-default">Сохранить</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>
