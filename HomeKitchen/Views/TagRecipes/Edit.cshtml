@model HomeKitchen.Models.TagRecipe

@{
    ViewBag.Title = "Редактирование тега для рецепта";
}

<h2>Редактирование тега для рецепта</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Тег для рецепта</h4>
        <hr class="black-border"/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RecipeId)

        @Html.HiddenFor(model => model.TagId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Save" class="btn btn-default">Сохранить</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>
