
@{
    ViewBag.Title = "Редактирование профиля";
}
@model HomeKitchen.Models.User

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Профиль</h2><br>
            <div class="col-md-3">
                <img class="img-circle img-responsive" alt="Фото" src="../@Model.UserProfile.PhotoUrl" styles="height:200px; width:200px">
                <br>
                <div class="form-horizontal">
                    <div class="form-group">
                        <form method="post" action="/Home/ChangeAvatar" enctype="multipart/form-data">
                            <label class="col-md-8">Изменить фото</label>
                            <input name="fileInput" type="file" required><br>
                            <button type="submit" class="btn btn-default col-md-12">Сохранить</button>
                        </form>
                    </div>
                    <div class="form-group">
                        <label class="col-md-9">Изменить пароль</label>
                        <div >
                            <form method="post" action="/Home/ChangePassword">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input type="password" class="form-control" placeholder="Старый пароль" name="previousPassword" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input type="password" class="form-control" placeholder="Новый пароль" name="newPassword" required>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-default col-md-12">Сохранить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <form role="form" method="post" action="/Home/ChangeInfo">
                    <div class="form-horizontal">

                        <div class="form-group">
                            <div class="col-md-2"></div>
                            <label class="col-md-3">Логин</label>
                            <p class="col-md-5">@Model.Login</p>
                            <div class="col-md-2"></div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2"></div>
                            <label class="col-md-3">Email</label>

                            <div id="email">
                                <div class="col-md-5">
                                    <input type="text" class="form-control" value="@Model.Email" name="email">
                                </div>
                                <button type="submit" class="btn btn-default">Сохранить</button>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-2"></div>
                            <label class="col-md-3">Дата регистрации</label>
                            <p class="col-md-5">@Model.DateOfRegistration</p>
                            <div class="col-md-2"></div>
                        </div>

                        <hr>

                        <div class="form-group">
                            <div class="col-md-2"></div>
                            <label class="col-md-3">Имя</label>
                            <div>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" name="name" value="@Model.UserProfile.Name">
                                </div>
                                <button type="submit" class="btn btn-default">Сохранить</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"></div>
                            <label class="col-md-3">Пол</label>
                            <div>
                                <div class="dropdown col-md-5">
                                    <select class="form-control" name="gender">
                                        <option value="Женский">Женский</option>
                                        <option value="Мужской">Мужской</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-default">Сохранить</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2"></div>
                            <label class="col-md-3">Дата рождения</label>
                            <div>
                                <div class="col-md-5">
                                    <input type="date" class="form-control" name="date" value="@Model.UserProfile.DateOfBirth">
                                </div>
                                <button type="submit" class="btn btn-default">Сохранить</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
