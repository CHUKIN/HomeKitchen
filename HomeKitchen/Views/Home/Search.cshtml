
@{
    ViewBag.Title = "Рецепты";
}

<script>
    $(document).ready(function() {
        $.getJSON('GetRecipies',
            function (data) {
                fill(data);
            });
    });

    function fill(data) {
        var container = document.getElementById("listRecipies");
        container.innerHTML = "";


        var i = 0;
        $.each(data,
            function (key, val) {

               

                var div = document.createElement('div');
                div.classList.add('col-md-4');
                div.classList.add('text-center');


                var img = document.createElement('img');
                img.classList.add("img-rounded");
                img.classList.add("img-responsive");
                img.setAttribute('alt', "Картинка");
                img.setAttribute('src', val['PhotoUrl']);
//                img.style.width = '140px';
//                img.style.height = '140px';

                var h2 = document.createElement('h2');
                h2.innerText = val['Name'];

                var p = document.createElement('p');
                p.innerText = val['Preview'];

                var p2 = document.createElement('p');
                p2.innerText = "";
                var span = document.createElement('span');
                span.classList.add("navbar-left");
                span.classList.add("glyphicon");
                span.classList.add("glyphicon-heart");
                p2.appendChild(span);
                var span2 = document.createElement('span');
                span2.classList.add("navbar-left");
                span2.innerText = " $5 ";
                p2.appendChild(span2);
                var span1 = document.createElement('span');
                span1.classList.add("navbar-right");
                span1.classList.add("glyphicon");
//                span1.classList.add("glyphicon-star"); // избранное
                span1.classList.add("glyphicon-star-empty"); // не избранное
                p2.appendChild(span1);

                var br = document.createElement('br');

                var a = document.createElement('a');
                a.classList.add('btn');
                a.classList.add('btn-default');
                a.setAttribute('href', 'Recipe/' + val['Id']);
                a.setAttribute('role', 'button');
                a.innerText = 'Подробнее >>';
                var p1 = document.createElement('p');
                p1.innerText = "";
                p1.appendChild(a);

                div.appendChild(img);
                div.appendChild(h2);
                div.appendChild(p);
                div.appendChild(p2);
                div.appendChild(br);
                div.appendChild(p1);


                container.appendChild(div);
                i++;


            });
    }

    function sendTags() {
        $.post('GetRecipies',
            $("#search").serialize(),
            function(data) {
                fill(data);
            });
    }


</script>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="panel-group" id="accordion">
                <form name="search" id="search">


                        <div class="btn-group input-group">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Поиск" name="searchText" oninput="sendTags()">
                            </div>
                           
                        </div>
                    
                    <br>

                    @{

                        foreach (var category in Model)
                        {
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" href="#@category.Name">@category.Name</a>
                                    </h4>
                                </div>
                                <div id="@category.Name" class="panel-collapse collapse in">
                                    <div class="panel-body">
                                        @{
                                            foreach (var tag in category.Tags)
                                            {
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox" value="@tag.Name" name="tags" onchange="sendTags()">@tag.Name</label>
                                                </div>
                                            }
                                        }

                                    </div>
                                </div>
                            </div>
                        }
                    }
                </form>
            </div>
        </div>

       
           
                <div id="listRecipies">

                </div>
       
       
    </div>

</div>




