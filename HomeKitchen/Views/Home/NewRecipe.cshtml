
@{
    ViewBag.Title = "Создание нового рецепта";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h2 class="text-center">Создание нового рецепта</h2><br>

            <div class="col-md-3"></div>
            <form role="form" class="col-md-6">

                <div class="form-group">
                    <label>Название блюда</label>
                    <input type="text" class="form-control">
                </div>

                <div class="form-group">
                    <label>Краткое описание</label>
                    <textarea class="form-control" placeholder="Введите описание..." rows="3"></textarea>
                </div>

                <div class="btn-group">
                    <label>Время приготовления</label>
                    <div class="navbar-form navbar-left">
                        <div class="form-group">
                            <input type="number" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="">ч. </label>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="">мин. </label>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <label>Теги</label>
                    <input type="text" class="form-control" placeholder="Начните писать название тега...">

                </div>
                <div class="col-md-1">
                    <button class="btn btn-success" type="button"><span class="glyphicon glyphicon-plus"></span></button>
                </div><br><br><br>

                <label>Ингредиенты</label>
                <div class="form-group">
                    @*                    <label class="col-md-1 control-label">Название:</label>*@
                    <input type="text" class="form-control " placeholder="Название">
                    @*                    <label class="col-md-1 control-label">Количество:</label>*@
                    <input type="number" class="form-control " placeholder="Количество">
                    @*                    <label class="col-md-1 control-label">Ед. измерения:</label>*@
                    <div class="form-group">
                        <button type="button" class="btn btn-default dropdown-toggle form-control " data-toggle="dropdown">
                            Ед. измерения <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu " role="menu">
                            <li>$кг</li>
                            <li>л</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-1">
                    <button class="btn btn-success" type="button"><span class="glyphicon glyphicon-plus"></span></button>
                </div><br><br><br>

                <label>Приготовление</label>
                <div class="form-group">
                    <label>Шаг</label>
                    <textarea class="form-control" placeholder="Введите описание..." rows="3"></textarea>
                    <button class="btn btn-default"> Загрузить фото
                        <span class="glyphicon glyphicon-open"></span>
                    </button>
                </div>
                <div class="col-md-1">
                    <button class="btn btn-success" type="button"><span class="glyphicon glyphicon-plus"></span></button>
                </div><br><br><br>

                <button type="submit" class="btn btn-default">Сохранить</button>

            </form>

            <div class="col-md-3"></div>

        </div>
    </div>
</div>

